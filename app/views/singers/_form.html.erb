<%= form_for @singer, :html => { :class => "form-horizontal singer" } do |f| %>

  <% if @singer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@singer.errors.count, "error") %> prohibited this singer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @singer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :sex, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sex, :class => 'form-control' %>
    </div>
  </div>

  <div class="control-group ">
    <%= f.label :age, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :age, :class => 'form-control' %>
    </div>
  </div>

  
  
  <div class="controls">
    <%= f.submit nil, :class => "btn btn-primary" %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      singers_path, :class => 'btn btn-default' %>
  <% end %>
</div>
