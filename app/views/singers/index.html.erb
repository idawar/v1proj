<%- model_class = Singer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:sex) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
    </tr>
  </thead>
  <tbody>
    <% @singers.each do |singer| %>
      <tr>
        <td><%= singer.first_name %></td>
        <td><%= singer.last_name %></td>
        <td><%= singer.sex %></td>
        <td><%= singer.age %></td>
        
        <td> <% if admin_signed_in? %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      singer_path(singer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      singer_path(singer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
                      <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class = "btn-group">
<% if admin_signed_in? || user_signed_in? %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_singer_path,
            :class => 'btn btn-primary' %>


  <%= link_to 'Add a song', new_song_path, :class => 'btn btn-default' %>
  <%= link_to 'View songs', songs_path(),:class => 'btn btn-default' %>
</div>
<% end %>